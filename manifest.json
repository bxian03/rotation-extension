{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "rotation extension",

  "description": "rotates, inverts, and flips images",

  "icons": {
    "16": "icons/eyes16.png",
    "48": "icons/eyes48.png",
    "128": "icons/eyes128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "icons/eyes32.png",
    "default_title": "rotate image"
  }
}
